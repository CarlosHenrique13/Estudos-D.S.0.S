%MACRO __Keyboard_Drive_Load 2
	mov byte[Sector], KEYBOARD_SECTOR
	mov byte[Drive], 80h
	mov byte[NumSectors], KEYBOARD_NUM_SECTORS
	mov word[SegmentAddr], %1
	mov word[OffsetAddr], %2
	call ReadDisk
%ENDMACRO 

